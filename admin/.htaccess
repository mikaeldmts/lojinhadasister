# Proteção adicional para pasta admin

# Bloquear acesso direto a arquivos PHP includes
<FilesMatch "^(header|footer)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear listagem de diretórios
Options -Indexes

# Proteção contra XSS
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
